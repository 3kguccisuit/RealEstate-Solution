<Window x:Class="RealEstate.Windows.EditEstateWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:RealEstate.TemplateSelectors"
        Title="Edit Estate" Height="450" Width="800">

    <Window.Resources>
        <!-- Merging the external EditEstateTemplates ResourceDictionary -->
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!-- Make sure the path is correct for your project -->
                <ResourceDictionary Source="pack://application:,,,/RealEstate;component/Views/EditEstateTemplates.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <!-- Define the TemplateSelector -->
            <local:EditEstateTemplateSelector 
                x:Key="EditEstateTemplateSelector"
                VillaEditTemplate="{StaticResource VillaEditTemplate}"
                ApartmentEditTemplate="{StaticResource ApartmentEditTemplate}" />
        </ResourceDictionary>
    </Window.Resources>

    <Grid>
        <!-- ContentControl to choose between Villa or Apartment input fields -->
        <ContentControl Content="{Binding SelectedEstate}" 
                        ContentTemplateSelector="{StaticResource EditEstateTemplateSelector}" />
    </Grid>
</Window>
